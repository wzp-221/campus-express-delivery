<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/add_send_big"
                android:gravity="center_horizontal" />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代发快递信息"
                android:layout_gravity="center"
                android:textColor="#333333"/>-->


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <EditText
                    android:id="@+id/send_express_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="物件名称" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <EditText
                    android:id="@+id/send_express_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="物件类型" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp">
                        <EditText
                            android:id="@+id/send_express_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="物件重量"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:text="kg"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_width="0dp">
                        <EditText
                            android:id="@+id/send_express_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="物件估值" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:text="元"
                        android:gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <EditText
                    android:id="@+id/send_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="赏金" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <EditText
                    android:id="@+id/send_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="备注" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/send_select_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">
                    <EditText
                        android:id="@+id/send_meeting_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="交易时间" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <EditText
                    android:id="@+id/send_meeting_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="交易地点" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_send_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:text="NEXT"
                android:padding="12dp"
                android:background="@drawable/white_rounded_button"/>


        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>