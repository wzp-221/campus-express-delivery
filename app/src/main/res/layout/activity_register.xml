<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F3F5F4">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/account"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER A NEW ACCOUNT"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/input_userphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/input_userpassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="确认密码"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/input_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/input_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="学号"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/input_stuid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:textSize="16sp"
                android:inputType="number"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <LinearLayout
            style="@style/MineFunctionRl"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:text="学校"
                android:textColor="@color/color_222222" />
            <EditText
                android:id="@+id/input_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@null"
                android:textSize="16sp"
                android:text="中国某学校"
                android:textColor="@color/color_222222"/>

        </LinearLayout>

        <View style="@style/MineFunctionDivider" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/bg_btn_login_selected"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>



