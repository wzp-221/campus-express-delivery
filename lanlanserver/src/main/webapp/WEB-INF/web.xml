<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

    <!--登录-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!--注册-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <!--主界面的任务信息查询-->
    <servlet>
        <servlet-name>AllTaskInfoServlet</servlet-name>
        <servlet-class>AllTaskInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllTaskInfoServlet</servlet-name>
        <url-pattern>/AllTaskInfoServlet</url-pattern>
    </servlet-mapping>

    <!--发布代收或者代发任务-->
    <servlet>
        <servlet-name>AddTaskServlet</servlet-name>
        <servlet-class>AddTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTaskServlet</servlet-name>
        <url-pattern>/AddTaskServlet</url-pattern>
    </servlet-mapping>

    <!--编辑个人资料-->
    <servlet>
        <servlet-name>ModifyUserInfoServlet</servlet-name>
        <servlet-class>ModifyUserInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyUserInfoServlet</servlet-name>
        <url-pattern>/ModifyUserInfoServlet</url-pattern>
    </servlet-mapping>

    <!--接收任务-->
    <servlet>
        <servlet-name>ReceiveThisTask</servlet-name>
        <servlet-class>ReceiveThisTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiveThisTask</servlet-name>
        <url-pattern>/ReceiveThisTask</url-pattern>
    </servlet-mapping>

    <!--查询我发布的任务-->
    <servlet>
        <servlet-name>MyReleaseTaskServlet</servlet-name>
        <servlet-class>MyReleaseTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyReleaseTaskServlet</servlet-name>
        <url-pattern>/MyReleaseTaskServlet</url-pattern>
    </servlet-mapping>

    <!--查询我接受的任务-->
    <servlet>
        <servlet-name>MyAcceptTaskServlet</servlet-name>
        <servlet-class>MyAcceptTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyAcceptTaskServlet</servlet-name>
        <url-pattern>/MyAcceptTaskServlet</url-pattern>
    </servlet-mapping>

    <!--删除我发布的未被接受的任务-->
    <servlet>
        <servlet-name>DeleteThisTask</servlet-name>
        <servlet-class>DeleteThisTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteThisTask</servlet-name>
        <url-pattern>/DeleteThisTask</url-pattern>
    </servlet-mapping>
  
</web-app>
